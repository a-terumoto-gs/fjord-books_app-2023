<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <header>
  <% if user_signed_in? %>
      <%= link_to t("views.common.logout"), destroy_user_session_path, method: :delete %>
    <% unless current_page?(edit_user_registration_path) %>
      <%= link_to t("views.users.edit"), edit_user_registration_path %>
    <% end %>
    <% unless current_page?(users_path) %>
        <%= link_to t("views.users.index"), users_path %>
    <% end %>
    <% unless current_page?(books_path) %>
        <%= link_to t("views.books.index"), books_path %>
    <% end %>
  <% end %>
</header>
    <%= yield %>
  </body>
</html>
